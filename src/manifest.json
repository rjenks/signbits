{
    "manifest_version": 2,
    "name": "Signbits",
    "short_name": "Digital Schedule Signage",
    "description": "Displays an event schedule with data retrieved from a REST API",
    "version": "1.0.14",
    "author": "Rob Jenks @Willshaper",
    "icons": {
        "16": "assets/icon16.png",
        "32": "assets/icon32.png",
        "48": "assets/icon48.png",
        "128": "assets/icon128.png"
    },
    "permissions": [
        "<all_urls>",
        "*://*/*",
        "power",
        "storage",
        "usb",
        {
            "usbDevices": [
                { "vendorId": 1254, "productId": 21905 },
                { "vendorId": 1839, "productId": 8704 }
            ]
        }
    ],
    "app": {
        "background": {
            "scripts": ["background.js"]
        }
    },
    "minimum_chrome_version": "67",
    "kiosk_enabled": true
}